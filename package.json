    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.3.0",
    "babel-plugin-root-import": "^6.5.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-plugin-import": "^2.20.1",
